 <h2 class="">Category Details</h2>



<ul class="">
   <li>
   <%=image_tag "#{@group.icon}" ,class:"", width: "50px", height: "auto"%>
   </li>
 </ul>

 <ul class="">
   <li>
     <p class="">Category: <%= @group.name%></p>
   </li>
 </ul>
 <ul class="">
   <li>
     <p class="">Sum: $<%= @group.spendings.sum(:amount)%></p>
   </li>

 </ul>


 <% if @group.spendings.any? %>


 <% @group.spendings.order(created_at:'DESC').each do |spend|%>
 <div class="">
   <ul class="">
     <li>
       <p class=""><%= spend.name%></p>
     </li>
     <li>
       <p class="">Created At: <%= spend.created_at.strftime("%Y-%b-%d")%></p>
     </li>
   </ul>
   <ul class="">
     <li>
       <p class="">Amount: $<%= spend.amount%></p>
     </li>
     <li>
       <%if can? :destroy, spend%>
       <%=button_to "Delete", group_spending_path(group_id: @group.id, id: spend.id), method: :delete, class:""%>
       <%end%>
     </li>
   </ul>
 </div>
 <%end%>


 <%else%>
 <p class="">There are no transactions for this category</p>
 <%end%>


 <div class="">
   <%= link_to "Add transaction",  new_group_spending_path( @group), class: ""%>
 </div>
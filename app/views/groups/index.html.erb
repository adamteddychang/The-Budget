<% if @groups.any?%>
<% @groups.each do |group| %>



<div class="">
  <div class="">
   <%=image_tag "#{group.icon}" ,class:"", width: "50px", height: "auto"%>
    <ul class="">
      <li>
        <p><%= link_to group.name, group_path(group), class:"" %></p>
      </li>
      <li>
        <p class=""> <%= group.created_at.strftime("%Y-%b-%d")%></p>
      </li>
    </ul>
  </div>


  <ul class="">
    <li>
      <p class=""> Sum: $<%= group.spendings.sum(:amount)%></p>
    </li>
    <li>
      <%if can? :destroy, group%>
      <%=button_to "Delete", group_path(group.id), method: :delete, class:""%>
      <%end%>
    </li>
  </ul>




</div>
<%end%>


<%else%>
<p class="">No existing category. Please add a category</p>
<%end%>


<div class="">
  <%= link_to "Add Category", new_group_path, class: ""%>
</div>
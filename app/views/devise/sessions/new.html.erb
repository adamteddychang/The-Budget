<p class="notice text-center"><%= notice %></p>
<p class="alert text-center"><%= alert %></p>
<h1 class="text-center app-title">Log in</h1>
<section class="d-flex flex-column align-items-center">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="mb-3 ">
      <%= f.label :email ,for:"loginemail", class:"form-label"%><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email",id:"loginemail", class:'form-control' %>
    </div>
    <div class="mb-3">
      <%= f.label :password , for:"loginpass", class:"form-label"%><br />
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", id:"loginpass", class:"form-control" %>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="mb-3 form-check">
        <%= f.check_box :remember_me, class:'form-check-input', id:'logincheck'%>
        <%= f.label :remember_me, class:"form-check-label", for:'logincheck' %>
      </div>
    <% end %>
    <div class="text-center">
      <%= f.submit "Log in", class:'btn btn-primary' %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</section>
